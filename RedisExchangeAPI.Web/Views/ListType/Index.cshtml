@model List<string>


<form method="post" asp-action="Add" enctype="application/x-www-form-urlencoded">
    <input type="text" name="name" />
    <button type="submit">Kaydet</button>
</form>

<hr />
<a asp-controller="ListType" asp-action="RemoveFirst">Baştan Sil</a>


@foreach (var item in Model)
{
    <h3>@item  / <a asp-action="Remove" asp-route-name="@item">Sil</a></h3>
}
